{
  "manifest_version": 3,
  "name": "Save-2-PDF",
  "version": "1.0",
  "description": "Download current page as PDF with custom filename",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "notifications",
    "clipboardWrite"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}